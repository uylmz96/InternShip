
@{
    ViewBag.Title = "Öğrenci Güncelle";
}
@using InternShip.MvcUI.Models;
@using System;
@model Student

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Öğrenci Ekle
                </div>
                <div class="block-controls">
                    <a href="/Student/Index" class="block-control block-control-remove"></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>

            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form role="form" action="/Student/StudentUpdate" method="post">
                        <div class="form-group">
                            <label for="studentnumber">Öğrenci Numarası : </label>
                            <input type="hidden" class="form-control" id="studentid" placeholder="" name="StudentID" value="@Model.StudentID">
                            <input type="text" class="form-control" id="studentnumber" placeholder="" name="StudentNumber" value="@Model.StudentNumber">
                        </div>
                            <div class="form-group">
                                <label for="name">Adı : </label>
                                <input type="text" class="form-control" id="name" placeholder="" name="Name" value="@Model.Name">
                            </div>
                            <div class="form-group">
                                <label for="surname">Soyadı : </label>
                                <input type="text" class="form-control" id="surname" placeholder="" name="Surname" value="@Model.Surname">
                            </div>
                            <div class="form-group">
                                <label for="mail">E-Mail</label>
                                <input type="email" class="form-control" id="mail" placeholder="" name="Mail" value="@Model.Mail">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" id="phone" placeholder="555 555 5555" name="Phone" value="@Model.Phone">
                            </div>
                            <div class="form-group">
                                <label for="entrydate">Giriş Tarihi</label>
                                <input type="date" class="form-control" id="entrydate" placeholder="gg.aa.yyyy" name="EntryDate" value="@Model.EntryDate">
                            </div>                        
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
