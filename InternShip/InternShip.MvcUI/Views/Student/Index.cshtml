
@{
    ViewBag.Title = "Öğrenciler";
}

@using InternShip.MvcUI.Models;

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Öğrenciler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Student/StudentAdd" class="btn btn-success rounded" role="button">Yeni Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner" style="overflow-x: auto;">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>
                                <tr class="h4">
                                    <th>Öğrenci Numarası</th>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Mail</th>
                                    <th>Telefon</th>
                                    <th>Giriş Tarihi</th>
                                    <th>Mezun Durumu</th>
                                    <th>Güncelle/Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Student item in ViewBag.Students)
                                {
                                    <tr>
                                        <td>@item.StudentNumber</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Phone</td>
                                        <td>@item.EntryDate</td>
                                        <td>
                                            @{if (item.isGraduate == true)
                                                {
                                                    <span class="label label-success">Mezun</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-warning">Devam Ediyor</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            <a href="/Student/StudentUpdate/@item.StudentID" class="btn btn-warning rounded ">Güncelle</a>
                                            <a href="#" class="btn btn-danger rounded studentdelete" data-studentid="@item.StudentID">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptSection{
    <script>
        $(".studentdelete").click(function () {
            var sonuc = confirm("İşlemi onaylıyor musunuz ?");
            if (sonuc) {
                var studentID = $(this).data("studentid");
                debugger;
                $.ajax({
                    type: "POST",
                    url: "/Student/StudentDelete/",
                    data: { StudentID: studentID },
                    success: function () {
                        window.location.replace("/Student/Index");
                        alert("Kayıt Silindi");
                    },
                    error: function () {
                        alert("Kayıt Silme işlemi başarısız.");
                    }
                });
            }
            else {
                //alert("Cancel");
            }
        });
    </script>
}