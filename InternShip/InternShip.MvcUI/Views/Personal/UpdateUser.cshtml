@{
    ViewBag.Title = "Kullanıcı";
}
@model MembershipUser

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kullanıcı
                </div>
                <div class="block-controls">
                    @*<a href="/User/Index" class="block-control block-control-remove"></a>*@
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    @if (Model != null)
                    {
                        <form role="form" action="/Personal/UpdateUser" method="post">
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="username" placeholder="" name="UserName" readonly value="@User.Identity.Name">
                            </div>
                            <div class="form-group">
                                <label for="name">Ad Soyad : </label>
                                <input type="text" class="form-control" id="name" placeholder="" name="Name" value="@Model.Comment">
                            </div>
                            <div class="form-group">
                                <label for="mail">E-Mail</label>
                                <input type="email" class="form-control" id="mail" placeholder="" name="Mail" value="@Model.Email">
                            </div>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    }
                    @if (ViewBag.Message != null)
                    {
                        <span id="spnmessage" style="font-size:20px">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
