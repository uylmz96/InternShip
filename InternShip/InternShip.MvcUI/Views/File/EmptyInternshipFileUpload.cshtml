
@{
    ViewBag.Title = "EmptyInternshipFileUpload";
}

<div class="col-sm-12 col-md-12">
    <div class="row">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Staj Dosyası Yükle
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    @using (Html.BeginForm("EmptyInternshipFileUpload",
                            "File",
                            FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label for="file">Dosya :</label>
                            <input type="file" class="form-control" name="file" id="file" required />
                            <span class="help-block">Eklenen dosya bir .rar yada .zip dosyası olmalıdır.</span>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Yükle" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

