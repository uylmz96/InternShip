
@{
    ViewBag.Title = "Reddetme Gerekçeleri";
}

@using InternShip.MvcUI.Models;

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Staj Reddetme Gerekçeleri
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/RefusalReason/Reason/-1" class="btn btn-success rounded" role="button">Yeni Gerekçe</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner" style="overflow-x: auto;">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed" id="datatable">
                            <thead>
                                <tr>
                                    <th>Gerekçe</th>
                                    <th>Açıklama</th>
                                    <th>Güncelle/Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ if (ViewBag.RefusalReasons != null)
                                    {
                                        foreach (RefusalReason item in ViewBag.RefusalReasons)
                                        {
                                            <tr>
                                                <td>@item.Reason</td>
                                                <td>@item.Desc</td>
                                                <td>
                                                    <a href="/RefusalReason/Reason/@item.ReasonID" class="btn btn-warning rounded">Güncelle</a>
                                                    <a href="/RefusalReason/ReasonDelete/@item.ReasonID" class="btn btn-danger rounded">Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
