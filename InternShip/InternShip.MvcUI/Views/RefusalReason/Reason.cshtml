
@{
    ViewBag.Title = "Gerekçe Ekle";
}
@using InternShip.MvcUI.Models;
@model RefusalReason
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Gerekçe
                </div>
                <div class="block-controls">
                    <a href="/RefusalReason/Index" class="block-control block-control-remove"></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    @{if (Model == null)
                        {
                            <form role="form" action="/RefusalReason/ReasonAdd" method="post">
                                <div class="form-group">
                                    <label for="reason">Gerekçe : </label>
                                    <input type="text" class="form-control" id="reason" placeholder="Gerekçe başlığını giriniz." name="Reason">
                                </div>
                                <div class="form-group">
                                    <label for="desc">Açıklama</label>
                                    <input type="text" class="form-control" id="desc" placeholder="Açıklama giriniz." name="Desc">
                                </div>
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </form>
                        }
                        else
                        {
                            <form role="form" action="/RefusalReason/ReasonUpdate" method="post">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" id="reasonid" name="ReasonID" value="@Model.ReasonID" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="reason">Gerekçe : </label>
                                    <input type="text" class="form-control" id="reason" placeholder="Gerekçe başlığını giriniz." name="Reason" value="@Model.Reason">
                                </div>
                                <div class="form-group">
                                    <label for="desc">Açıklama</label>
                                    <input type="text" class="form-control" id="desc" placeholder="Açıklama giriniz." name="Desc" value="@Model.Desc">
                                </div>
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </form>
                        }
                    }
                    @if (ViewBag.Message != null)
                    {
                        <span id="spnmessage" style="font-size:20px">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

