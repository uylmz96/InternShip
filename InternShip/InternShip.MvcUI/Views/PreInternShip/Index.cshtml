
@{
    ViewBag.Title = "Ön Başvurular";
    Layout = "/Views/Shared/_Layout2.cshtml";
}

@using InternShip.MvcUI.Models;
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ön Başvuru Formları
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/PreInternShip/PreInternShip/-1" class="btn btn-success rounded" role="button">Yeni Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner" style="overflow-x: auto;">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed" id="datatable">
                            <thead>
                                <tr>
                                    <th>Öğrenci Numarası</th>
                                    <th>Şiket Adı</th>
                                    <th>Adres</th>
                                    <th>Mail</th>
                                    <th>Telefon</th>
                                    <th>Departman</th>
                                    <th>Faaliyet Alanı</th>
                                    <th>Teknolojiler</th>
                                    <th>Çalışan Bilgileri</th>
                                    <th>Staj Konusu</th>
                                    <th>Başlama Tarihi</th>
                                    <th>Bitiş Tarihi</th>
                                    <th>Güncelle</th>
                                    <th>Çıktı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.PreInternShips != null)
                                {
                                    foreach (PreInternship item in ViewBag.PreInternShips)
                                    {
                                        <tr>
                                            <td>@item.StudentNumber</td>
                                            <td>@item.CompanyName</td>
                                            <td>@item.CompanyAddress</td>
                                            <td>@item.CompanyMail</td>
                                            <td>@item.CompanyPhone</td>
                                            <td>@item.Department</td>
                                            <td>@item.Activity</td>
                                            <td>@item.Tech</td>
                                            <td>@item.EmployeeDesc</td>
                                            <td>@item.Subject</td>
                                            <td>@item.StartDate</td>
                                            <td>@item.EndDate</td>
                                            <td>
                                                @if (item.InternshipID == null)
                                                {
                                                    <span class="label label-warning">Onay Bekleniyor.</span>

                                                }
                                                else
                                                {
                                                    if (item.InternShip.DelDate == null)
                                                    {
                                                        <span class="label label-primary">Onaylanmış</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-danger">İptal Edilmiş</span>
                                                    }
                                                }
                                            </td>
                                            <td><a href="/PreInternShip/PreInternShipPrint/@item.PreInternshipID" class="btn btn-info rounded ">Çıktı</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>