
@{
    ViewBag.Title = "Kullanıcı";
}
@model MembershipUser

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kullanıcı
                </div>
                <div class="block-controls">
                    <a href="/User/Index" class="block-control block-control-remove"></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    @if (Model == null)
                    {
                        <form role="form" action="/User/UserAdd" method="post">
                            <div class="form-group">
                                <label for="name">Adı : </label>
                                <input type="text" class="form-control" id="name" placeholder="" name="Name">
                            </div>
                            <div class="form-group">
                                <label for="surname">Soyadı : </label>
                                <input type="text" class="form-control" id="surname" placeholder="" name="Surname">
                            </div>
                            <div class="form-group">
                                <label for="username">Kullanıcı Adı : </label>
                                <input type="text" class="form-control" id="username" placeholder="" name="UserName">
                            </div>
                            <div class="form-group">
                                <label for="pass">Parola : </label>
                                <input type="password" class="form-control" id="pass" placeholder="" name="Password">
                                <p class="help-block">Parola en az 4 karakter olmalıdır.</p>
                            </div>
                            <div class="form-group">
                                <label for="pass2">Parola Tekrar : </label>
                                <input type="password" class="form-control" id="pass2" placeholder="" name="PasswordAgain">
                            </div>
                            <div class="form-group">
                                <label for="mail">E-Mail</label>
                                <input type="email" class="form-control" id="mail" placeholder="" name="Mail">
                            </div>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    }
                    else
                    {
                        <form role="form" action="/User/UserUpdate" method="post">
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="username" placeholder="" name="UserName" readonly value="@User.Identity.Name">
                            </div>
                            <div class="form-group">
                                <label for="name">Ad Soyad : </label>
                                <input type="text" class="form-control" id="name" placeholder="" name="Name" value="@Model.Comment">
                            </div>
                            <div class="form-group">
                                <label for="mail">E-Mail</label>
                                <input type="email" class="form-control" id="mail" placeholder="" name="Mail" value="@Model.Email">
                            </div>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    }
                    @if (ViewBag.Message != null)
                    {
                        <span id="spnmessage" style="font-size:20px">@ViewBag.Message</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

